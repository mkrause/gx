<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %class{1.} (%file:%line) - %msg%n"/>
        </Console>
    </appenders>
    <loggers>
        <logger name="org.apache.log4j.xml" level="info"/>
        <root level="debug">
            <appender-ref ref="STDOUT"/>
        </root>
    </loggers>
</configuration>